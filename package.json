{
  "name": "projectERB",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "esbuild": "node esbuild.config.js --minify",
    "esbuild-dev": "node esbuild.config.js --watch",
    "build:css": "mkdir -p ./output/assets && tailwindcss -i ./frontend/styles/index.css -o ./output/assets/styles.css --minify",
    "postbuild:css": "mkdir -p src/_assets/css && cp ./output/assets/styles.css src/_assets/css/main.css" 
},
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.19.2",
    "esbuild-plugin-copy": "^2.1.1",
    "glob": "^10.3.3",
    "postcss": "^8.5.3",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^15.1.0",
    "postcss-load-config": "^4.0.1",
    "postcss-preset-env": "^9.1.2",
    "read-cache": "^1.0.0",
    "tailwindcss": "^3.4.17"
  }
}